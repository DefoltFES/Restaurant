<Window x:Class="Restaurant.Views.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant.Views"
        mc:Ignorable="d"
        Title="DialogWindow" Height="232" Width="590" ShowInTaskbar="False" ResizeMode= "NoResize" >
   <StackPanel Background="White">
        <TextBlock Margin="39,32,0,0" FontSize="25" FontFamily="{StaticResource Medium}" Foreground="#212121" Opacity="0.85" Text="{Binding Description}"></TextBlock>
       <StackPanel Orientation="Horizontal" Margin="287,90,59,41" Background="Transparent">
           <Button Click="BackButton" Background="Transparent" BorderBrush="Transparent">
                <TextBlock FontSize="21" FontFamily="{StaticResource Medium}" Foreground="{StaticResource TextPlaceHolder}">НАЗАД</TextBlock>
            </Button>
           <Button Click="OkButton" Background="Transparent" BorderBrush="Transparent" Margin="32,0,0,0" >
                <TextBlock   FontSize="21" FontFamily="{StaticResource Medium}" Foreground="{StaticResource SecondColor}" Text="{Binding Accept}"></TextBlock>
           </Button>
        </StackPanel>
   </StackPanel>
</Window>
